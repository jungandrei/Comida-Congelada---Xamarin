<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="ProjetoM3.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources >
        <!-- estilos da tela -->
        <Style x:Key="NavigationPageTitleStyle" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>

        <Style x:Key="LabelStyleThin" TargetType="Label">
            <Setter Property="TextColor" Value="#2F2B28"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#2F2B28"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>

        <Style x:Key="LabelListaTituloStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#2F2B28"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>

        <Style x:Key="EntryStyleThin" TargetType="Entry">
            <Setter Property="TextColor" Value="Gray"/>
            <Setter Property="FontSize" Value="Small"/>
        </Style>

    </Application.Resources>
</Application>