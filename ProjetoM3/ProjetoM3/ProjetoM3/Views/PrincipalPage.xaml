<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetoM3.Views.PrincipalPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>

        <StackLayout Margin="20,10,20,0">

            <SearchBar Placeholder="Buscar no Mercado" />

            <Button
                x:Name="NovosPratosButton"
                Margin="0,10"
                BackgroundColor="White"
                BorderColor="#C4C4C4"
                BorderWidth="1"
                CornerRadius="5"
                Text="CADASTRAR PRATOS"
                TextColor="#FF0040"
                Clicked="ButtonNovosPratos_Clicked"/>

            <Button
                Margin="0,10"
                BackgroundColor="White"
                BorderColor="#C4C4C4"
                BorderWidth="1"
                CornerRadius="5"
                Text="MINHAS COMPRAS"
                TextColor="#FF0040" />

            <!--  REFEIÇÕES  -->

            <BoxView
                Margin="0,10,0,0"
                HeightRequest="2"
                Color="#C4C4C4" />

            <Label
                Margin="0,10"
                FontSize="15"
                Text="Refeições"
                TextColor="Black" />

            <StackLayout Orientation="Horizontal">

                <StackLayout>

                    <BoxView
                        CornerRadius="10"
                        HeightRequest="150"
                        HorizontalOptions="Start"
                        WidthRequest="150"
                        Color="#FECD1A">

                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Pratos" />
                        </BoxView.GestureRecognizers>

                    </BoxView>


                    <Label Text="Pratos" TextColor="Black" />

                </StackLayout>

                <StackLayout HorizontalOptions="EndAndExpand">

                    <BoxView
                        CornerRadius="10"
                        HeightRequest="150"
                        WidthRequest="150"
                        Color="#583D72">

                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_PratosCaseiros" />
                        </BoxView.GestureRecognizers>

                    </BoxView>


                    <Label Text="Pratos Caseiros" TextColor="Black" />

                </StackLayout>
            </StackLayout>


            <!--  ITENS INDIVIDUAIS  -->

            <BoxView
                Margin="0,10,0,0"
                HeightRequest="2"
                Color="#C4C4C4" />

            <Label
                Margin="0,10"
                FontSize="15"
                Text="Itens individuais"
                TextColor="Black" />

            <StackLayout Orientation="Horizontal">

                <StackLayout>

                    <BoxView
                        CornerRadius="10"
                        HeightRequest="150"
                        HorizontalOptions="Start"
                        WidthRequest="150"
                        Color="#FF8E71">

                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_PorcoesPrincipais" />
                        </BoxView.GestureRecognizers>

                    </BoxView>


                    <Label Text="Porções principais" TextColor="Black" />

                </StackLayout>

                <StackLayout HorizontalOptions="EndAndExpand">

                    <BoxView
                        CornerRadius="10"
                        HeightRequest="150"
                        WidthRequest="150"
                        Color="#51ADCF">

                        <BoxView.GestureRecognizers>

                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Acompanhamentos" />

                        </BoxView.GestureRecognizers>

                    </BoxView>


                    <Label Text="Acompanhamentos" TextColor="Black" />

                </StackLayout>
            </StackLayout>


            <!--  LANCHES, BEBIDAS E SOBREMESAS  -->

            <BoxView
                Margin="0,10,0,0"
                HeightRequest="2"
                Color="#C4C4C4" />

            <Label
                Margin="0,10"
                FontSize="15"
                Text="Lanches, bebidas e sobremesas"
                TextColor="Black" />

            <StackLayout Orientation="Horizontal">

                <StackLayout>

                    <BoxView
                        CornerRadius="10"
                        HeightRequest="150"
                        HorizontalOptions="Start"
                        WidthRequest="150"
                        Color="#FADCAA">

                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Lanches" />
                        </BoxView.GestureRecognizers>

                    </BoxView>


                    <Label Text="Lanches" TextColor="Black" />

                </StackLayout>

                <StackLayout HorizontalOptions="EndAndExpand">

                    <BoxView
                        CornerRadius="10"
                        HeightRequest="150"
                        WidthRequest="150"
                        Color="#FFDADA">

                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Bebidas" />
                        </BoxView.GestureRecognizers>

                    </BoxView>


                    <Label Text="Bebidas" TextColor="Black" />

                </StackLayout>
            </StackLayout>

            <!--  ALIMENTAÇÃO INFANTIL  -->

            <BoxView
                Margin="0,10,0,0"
                HeightRequest="2"
                Color="#C4C4C4" />

            <Label
                Margin="0,10"
                FontSize="15"
                Text="Alimentação Infantil"
                TextColor="Black" />

            <ScrollView Orientation="Horizontal">

                <StackLayout Orientation="Horizontal">

                    <StackLayout Padding="0,0,35,10">
                        <BoxView
                            CornerRadius="10"
                            HeightRequest="150"
                            HorizontalOptions="Start"
                            WidthRequest="150"
                            Color="#EFFAD3">

                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_PapinhasOrganicas" />
                            </BoxView.GestureRecognizers>

                        </BoxView>

                        <Label Text="Papinhas Orgânicas" TextColor="Black" />
                    </StackLayout>


                    <StackLayout Padding="0,0,35,10">
                        <BoxView
                            CornerRadius="10"
                            HeightRequest="150"
                            WidthRequest="150"
                            Color="#EFFAD3">

                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_PratosCombinados" />
                            </BoxView.GestureRecognizers>

                        </BoxView>

                        <Label Text="Pratos Combinados" TextColor="Black" />
                    </StackLayout>


                    <StackLayout Padding="0,0,35,10">
                        <BoxView
                            CornerRadius="10"
                            HeightRequest="150"
                            HorizontalOptions="Start"
                            WidthRequest="150"
                            Color="#EFFAD3">

                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_ItensIndividuais" />
                            </BoxView.GestureRecognizers>

                        </BoxView>

                        <Label Text="Itens Individuais" TextColor="Black" />
                    </StackLayout>


                    <StackLayout>
                        <BoxView
                            CornerRadius="10"
                            HeightRequest="150"
                            HorizontalOptions="Start"
                            WidthRequest="150"
                            Color="#EFFAD3">

                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_PaesLanchesSucos" />
                            </BoxView.GestureRecognizers>

                        </BoxView>

                        <Label Text="Pães, lanches e sucos" TextColor="Black" />
                    </StackLayout>


                </StackLayout>
            </ScrollView>

        </StackLayout>
    </ScrollView>
</ContentPage>